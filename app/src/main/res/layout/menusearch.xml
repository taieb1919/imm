<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0099cc"
    android:orientation="vertical"
    tools:context="com.javacodegeeks.androidstartactivityforresultexample.ActivityOne"
    android:clickable="false"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:weightSum="1">

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:textColorHighlight="#ffffffff"
            android:textColor="#ff000000"
            android:singleLine="true"
            android:textSize="@dimen/abc_action_bar_progress_bar_size"
            android:editable="true"
            android:background="#ffffffff"
            android:layout_weight="1.13" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rela">

            <ImageButton
                android:layout_marginTop="10dp"
                android:id="@+id/search"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_search"
                android:onClick="simplesearch"
                android:contentDescription="azerty">
            </ImageButton>
        </RelativeLayout>

    </LinearLayout>




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:id="@+id/containerlayout">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="CASE"
                    android:id="@+id/textView"

                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#ff4aff00"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/CASETEXT"


                    android:textSize="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:weightSum="1"

               >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="BOX"
                    android:id="@+id/textView1"

                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#ff4aff00"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/BOXTEXT"


                    android:textSize="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:weightSum="1"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Part Name"
                    android:id="@+id/textView2"

                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#ff4aff00"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/PARTNAMETEXT"


                    android:textSize="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold" />
            </LinearLayout>


            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fillViewport="false"
                android:id="@+id/scrollin2">

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Stationcontainer">>

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Station"
                            android:gravity="center_horizontal"
                            android:id="@+id/textView4"
                            android:textColor="#ff4aff00"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/cell_shape"
                            android:padding="5dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="QTY"
                            android:gravity="center_horizontal"
                            android:id="@+id/textView5"
                            android:textColor="#ff4aff00"
                            android:textStyle="bold" />



                    </TableRow>
                </TableLayout>
            </LinearLayout>
            </ScrollView>
        </LinearLayout>


</LinearLayout>